<?xml version="1.0" encoding="UTF-8"?>
<deploydescriptor>
	<global>
		<id>wysiwyg</id>
		<version>1.6.0</version>
		<patchlevel>0</patchlevel>
		<license>GPL-v2</license>
		<vendor>ontoprise GmbH</vendor>
		<maintainer>ontoprise GmbH</maintainer>
		<instdir>extensions/WYSIWYG</instdir>
		<description>
			Use the popular CKEditor for editing Wiki pages in WYSIWYYG mode.
		</description>
		<helpurl>http://smwforum.ontoprise.com/smwforum/index.php/Help:WYSIWYG_Extension</helpurl>
		<dependencies>
            <dependency from="1.17.0">mw</dependency>
			<dependency from="1.6.0" optional="true">smwhalo</dependency>
		</dependencies>
	</global>

	<codefiles>
		<file loc="deploy.xml" />
	</codefiles>

	<wikidumps>
		<!-- empty -->
	</wikidumps>

	<resources>
		<!-- empty -->
	</resources>

	<configs>
		<new>
            <patch file="patch_for_MW_1.16.x.txt" ext="mw" from="1.16.0" to="1.17.0"/>
            <patch file="patch_for_SF_2.0.8.txt" ext="semanticforms" from="2.0.8" to="2.0.8"/>
            <patch file="patch_for_SF_2.1.2.txt" ext="semanticforms" from="2.1.2" to="2.1.2"/>
            <require name="wysiwygtab" file="extensions/WYSIWYG/WYSIWYG.php"/>
		</new>
		<update from="1.3.2" removeAll="true">
          <require name="wysiwygtab" file="extensions/WYSIWYG/WYSIWYG.php"/>
        </update>
	</configs>
</deploydescriptor>